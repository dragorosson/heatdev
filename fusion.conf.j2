[DEFAULT]
log_file = /root/{{ dir }}/install/service.log
debug = true

[fusion_api]
# Address to bind the server.  Useful when selecting a
# particular network interface. (string value)
bind_host = 0.0.0.0

# The port on which the server will listen. (integer value)
bind_port = {{ port }}

[github]
api_base = https://api.github.com
organization = rackspace-orchestration-templates
template_file = .catalog
metadata_file = rackspace.yaml
default_version = stable
username = {{ GITHUB_USER }}
password = {{ GITHUB_PASS }}
metadata_key = rackspace-metadata
template_registry = /root/{{ dir }}/install/template_registry.yaml

[proxy]
heat_protocol = http
heat_host = localhost:{{ heat_port }}

[cache]
default_timeout = 600
cache_root = /root/{{ dir }}/install/cache
memcache_servers = 127.0.0.1:11211

[database]
connection = mysql://{{ dir }}:{{ HEAT_DB_PASS }}@localhost/{{ dir }}

[cloudfiles]
region_name = {{ TARGET_DC }}

[templates]
metadata_key = rackspace-metadata

[paste_deploy]
api_paste_config = /root/{{ dir }}/install/api-paste.ini

[revision]
api_version = {{ dir }}

